<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" styleClass="container" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.feedy.controllers.CreatePostController">
   <children>
      <Button layoutX="56.0" layoutY="349.0" mnemonicParsing="false" onAction="#createPost" styleClass="postbtn" text="Post">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <TextArea fx:id="postContent" layoutX="56.0" layoutY="172.0" prefHeight="156.0" prefWidth="500.0" promptText="Share Your Thoughts With The Community" styleClass="input_field" wrapText="true" />
      <Label layoutX="62.0" layoutY="25.0" onMouseClicked="#goToHomePage" prefHeight="30.0" prefWidth="96.0" text="ISSATCO">
         <font>
            <Font name="Microsoft YaHei Light" size="17.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Label>
      <ImageView fitHeight="46.0" fitWidth="32.0" layoutX="24.0" layoutY="24.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/twitter.png" />
         </image>
      </ImageView>
      <Button fx:id="logoutButton" layoutX="696.0" layoutY="20.0" mnemonicParsing="false" onAction="#logout" styleClass="logoutbtn" text="Logout" textFill="WHITE">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <Label fx:id="errorMessage" layoutX="190.0" layoutY="306.0" styleClass="error_message" />
   </children>
   <stylesheets>
        <URL value="@css/create_post.css" />
   </stylesheets>
</AnchorPane>
